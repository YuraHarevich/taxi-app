<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
            <connectionTimeout>5000</connectionTimeout>
            <requestTimeout>10000</requestTimeout>
        </http>
        <batch>
            <maxItems>1000</maxItems>
            <maxBytes>4194304</maxBytes>
            <timeout>5</timeout>
        </batch>
        <format>
            <label>
                <pattern>app=driver-service,host=${HOSTNAME}</pattern>
            </label>
            <message>
                <pattern>%d{ISO8601} | %-5level | %logger{36} |  traceId=%X{traceId:-NO_TRACE} | %msg%n</pattern>
            </message>
        </format>
    </appender>

    <root level="INFO">
        <appender-ref ref="LOKI"/>
    </root>
</configuration>